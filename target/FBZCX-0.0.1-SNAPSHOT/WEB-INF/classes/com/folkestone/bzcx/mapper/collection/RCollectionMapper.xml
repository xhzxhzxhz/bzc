  <select id="listByQuery" parameterType="com.folkestone.bzcx.bean.bean_dto.common.Query" resultMap="BaseResultMap">
      select * from r_collection r LEFT JOIN s_standard s ON r.STANDARD_ID=s.STANDARD_ID
      <where>
          <if test="userId != null">
              r.USER_ID = #{userId}
          </if>
          <if test="standardId != null">
              and r.STANDARD_ID = #{standardId}
          </if>
      </where>
      order by r.COLLECTION_DATE
  </select>
  
  
